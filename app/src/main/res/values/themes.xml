<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomDatePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CalendarViewStyle" parent="Theme.AppCompat">
<!--        <item name="colorAccent">#9EDC15</item>-->
        <item name="colorControlActivated">#9EDC15</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
    </style>
    <style name="CalendarViewDateTextStyle" parent="Theme.AppCompat">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CalendarViewWeekDayTextStyle" parent="Theme.AppCompat">
        <item name="android:textColor">#CCCCCC</item>
    </style>
</resources>